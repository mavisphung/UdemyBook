<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-dark">Author List </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-dark text-white" style="cursor:pointer"><i class="fa fa-plus"></i> &nbsp; Create New Author</a>
        </div>
    </div>

    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-light">
                <tr class="table-info">
                    <th>Name</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>PhoneNumber</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/Authors.js"></script>
}